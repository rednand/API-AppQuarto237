<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <link rel="shortcut icon" href="https://images2.imgbox.com/63/15/7WXYHaSz_o.png" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cadastrar Filmes</title>
  <style>
    label {
      color: rgb(247, 93, 93);
      font-size: 1.2rem;
      font-weight: 600;
      letter-spacing: 0.1rem;
    }

    input {
      box-shadow: -5px 5px 0px 0px rgb(247, 93, 93), 0 0 0 transparent;
    }
  </style>
</head>

<body style="background-color: rgb(11, 7, 7)">
  <h1 class="text-center fw-bold text-danger my-4">Cadastro de filme</h1>
  <div class="col-md-3 d-grid gap-2 col-6 mx-auto my-2">
    <button class="btn btn-danger rounded-0">
      <a class="link-dark fw-bold" href="/table">Tabela de filmes cadastrados</a>
    </button>
  </div>

  <div class="mb-3">
    <form style="width: 50%; margin: auto" class="row g-3" action="/post" method="POST"
      enctype="application/x-www-form-urlencoded">
      <div class="col-md-12">
        <label for="">Nome</label>
        <input class="form-control rounded-0 border border-secondary" type="text" name="name"
          placeholder="Nome do filme" />
      </div>
      <div class="col-md-12">
        <label for="">Lingua Original</label>
        <input class="form-control rounded-0 border border-secondary" type="text" name="original_language"
          placeholder="Língua" />
      </div>
      <div class="col-md-12">
        <label for="">Titulo Original</label>
        <input class="form-control rounded-0 border border-secondary" type="text" name="original_title"
          placeholder="Título original" />
      </div>

      <div class="col-md-12">
        <label for="">Overview</label>
        <input class="form-control rounded-0 border border-secondary" type="text" name="overview"
          placeholder="Sinopse" />
      </div>

      <div class="col-md-12">
        <label for="">Trailer</label>
        <input class="form-control rounded-0 border border-secondary" type="text" name="trailer"
          placeholder="Trailer" />
      </div>
      <div class="col-md-12">
        <label for="">Lançamento</label>
        <input class="form-control rounded-0 border border-secondary" type="datetime-local" name="release_date"
          placeholder="Data" />
      </div>
      <div class="col-md-12">
        <label for="">Gênero</label>
        <input class="form-control rounded-0 border border-secondary" type="text" name="genre" placeholder="Gêneros" />
      </div>
      <div class="col-md-6 d-grid gap-2 col-6 mx-auto">
        <button class="btn rounded-0 btn-danger" type="button" data-bs-toggle="tooltip" data-bs-placement="bottom"
          title="Adicione outro gênero caso possua mais de um" onclick="add()">
          Adicionar mais gêneros
        </button>
      </div>
      <div class="col-md-6 d-grid gap-2 col-6 mx-auto">
        <button data-bs-toggle="tooltip" data-bs-placement="bottom" title="Remova um gênero adicionado a mais"
          class="btn rounded-0 btn-danger" type="button" onclick="remove()">
          Remover
        </button>
      </div>
      <div id="new_input"></div>
      <input class="form-control rounded-0 border border-secondary" type="hidden" value="1" id="total_chq" />
      <div class="d-grid gap-2">
        <label for="poster" class="form-label">Poster</label>
        <button class="btn rounded-0 btn-danger" name="poster">
          <a target="_blank" class="link-dark fw-bold" href="https://imgbox.com/">
            Adicionar imagem</a>
        </button>
      </div>
      <div class="mb-3">
        <label for="poster" class="form-label">Link do Poster</label>
        <input class="form-control rounded-0 border border-secondary" type="text" name="poster" />
      </div>

      <div class="d-grid gap-2">
        <button class="btn rounded-0 btn-danger btn-lg" role="button" type="submit">
          Cadastrar
        </button>
      </div>
    </form>
  </div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
  function add() {
    var new_chq_no = parseInt($("#total_chq").val()) + 1;
    var new_input =
      "<input type='text' class='form-control rounded-0 border border-secondary' name='genre' id='new_" +
      new_chq_no +
      "'>";
    $("#new_input").append(new_input);
    $("#total_chq").val(new_chq_no);
  }

  function remove() {
    var last_chq_no = $("#total_chq").val();
    if (last_chq_no > 1) {
      $("#new_" + last_chq_no).remove();
      $("#total_chq").val(last_chq_no - 1);
    }
  }
</script>

</html>